{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.vs": true,
        "**/.venv": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "autopep8.args": [
        "--indent-size=4",
        "--max-line-length=120",
        "--aggressive"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "cSpell.language": "en,ru",
    "cSpell.dictionaries": ["english"],
    "cSpell.words": [
        "blit",
        "CAPSLOCK",
        "centerx",
        "centery",
        "collidepoint",
        "colliderect",
        "colorkey",
        "consts",
        "dtype",
        "KEYDOWN",
        "koefficient",
        "MOUSEBUTTONDOWN",
        "MOUSEBUTTONUP",
        "ndenumerate",
        "NOFRAME",
        "pygame",
        "RCTRL",
        "respawn",
        "SRCALPHA",
        "tankmap",
        "topleft",
        "VIDEORESIZE",
        "WINDOWRESIZED"
    ],
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}